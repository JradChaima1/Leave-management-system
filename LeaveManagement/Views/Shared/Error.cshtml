@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center p-5">
                <i class="bi bi-exclamation-triangle" style="font-size: 5rem; color: #EF4444;"></i>
                <h1 class="mt-4">Error</h1>
                <p class="text-muted">An error occurred while processing your request.</p>
                
                @if (Model.ShowRequestId)
                {
                    <p>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }
                
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="bi bi-house"></i> Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
