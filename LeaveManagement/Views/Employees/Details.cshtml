@model Leave.Core.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="page-header">
    <h1><i class="bi bi-person"></i> Employee Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-person-circle" style="font-size: 5rem; color: #7C3AED;"></i>
                <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
                <p class="text-muted">@Model.Position</p>
                @if (Model.IsActive)
                {
                    <span class="badge badge-approved">Active</span>
                }
                else
                {
                    <span class="badge badge-cancelled">Inactive</span>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">Leave Balance</div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Annual Leave:</strong>
                    <div class="progress mt-2">
                        <div class="progress-bar" style="width: @((Model.AnnualLeaveBalance / 20) * 100)%; background-color: #7C3AED;">
                            @Model.AnnualLeaveBalance days
                        </div>
                    </div>
                </div>
                <div>
                    <strong>Sick Leave:</strong>
                    <div class="progress mt-2">
                        <div class="progress-bar" style="width: @((Model.SickLeaveBalance / 10) * 100)%; background-color: #10B981;">
                            @Model.SickLeaveBalance days
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Personal Information</div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="200">Employee ID:</th>
                        <td>@Model.EmployeeId</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Phone:</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Department:</th>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <th>Position:</th>
                        <td>@Model.Position</td>
                    </tr>
                    <tr>
                        <th>Hire Date:</th>
                        <td>@Model.HireDate.ToString("MMMM dd, yyyy")</td>
                    </tr>
                </table>
            </div>
        </div>

        @if (Model.LeaveRequests != null && Model.LeaveRequests.Any())
        {
            <div class="card mt-3">
                <div class="card-header">Recent Leave Requests</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Days</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.LeaveRequests.OrderByDescending(r => r.RequestDate).Take(5))
                                {
                                    <tr>
                                        <td>@request.LeaveType?.Name</td>
                                        <td>@request.StartDate.ToString("MMM dd, yyyy")</td>
                                        <td>@request.EndDate.ToString("MMM dd, yyyy")</td>
                                        <td>@request.TotalDays</td>
                                        <td>
                                            <span class="badge badge-@request.Status.ToLower()">@request.Status</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
