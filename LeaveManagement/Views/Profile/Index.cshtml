@model Leave.Core.Models.Employee
@{
    ViewData["Title"] = "My Profile";
}

<div class="page-header">
    <h1><i class="bi bi-person-circle"></i> My Profile</h1>
    <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Request Leave
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-person-circle" style="font-size: 6rem; color: #7C3AED;"></i>
                <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
                <p class="text-muted mb-2">@Model.Position</p>
                <p class="text-muted">@Model.Department</p>
                @if (Model.IsActive)
                {
                    <span class="badge badge-approved">Active</span>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Contact Information
            </div>
            <div class="card-body">
                <p><strong><i class="bi bi-envelope"></i> Email:</strong><br/>@Model.Email</p>
                <p><strong><i class="bi bi-telephone"></i> Phone:</strong><br/>@Model.PhoneNumber</p>
                <p><strong><i class="bi bi-calendar"></i> Hire Date:</strong><br/>@Model.HireDate.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-wallet2"></i> Leave Balance
            </div>
            <div class="card-body">
                @if (ViewBag.LeaveBalances != null)
                {
                    <div class="row">
                        @foreach (var balance in ViewBag.LeaveBalances)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="p-3" style="background: #F3F4F6; border-radius: 12px;">
                                    <h6>@balance.LeaveType?.Name</h6>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Total: @balance.TotalDays days</span>
                                        <span>Used: @balance.UsedDays days</span>
                                    </div>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar" 
                                             style="width: @((balance.RemainingDays / balance.TotalDays) * 100)%; background-color: #7C3AED;">
                                            @balance.RemainingDays days left
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No leave balance information available.</p>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-clock-history"></i> Recent Leave Requests
            </div>
            <div class="card-body">
                @if (ViewBag.RecentRequests != null && ((IEnumerable<Leave.Core.Models.LeaveRequest>)ViewBag.RecentRequests).Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Days</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in ViewBag.RecentRequests)
                                {
                                    <tr>
                                        <td>@request.LeaveType?.Name</td>
                                        <td>@request.StartDate.ToString("MMM dd, yyyy")</td>
                                        <td>@request.EndDate.ToString("MMM dd, yyyy")</td>
                                        <td>@request.TotalDays</td>
                                        <td>
                                            @if (request.Status == "Pending")
                                            {
                                                <span class="badge badge-pending">Pending</span>
                                            }
                                            else if (request.Status == "Approved")
                                            {
                                                <span class="badge badge-approved">Approved</span>
                                            }
                                            else if (request.Status == "Rejected")
                                            {
                                                <span class="badge badge-rejected">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-cancelled">Cancelled</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-primary">
                        View All Requests
                    </a>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                        <p class="text-muted mt-2">No leave requests yet</p>
                        <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-primary">
                            Submit Your First Request
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
