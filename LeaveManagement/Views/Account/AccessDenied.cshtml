@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body p-5">
                <i class="bi bi-shield-exclamation" style="font-size: 5rem; color: #EF4444;"></i>
                <h2 class="mt-4">Access Denied</h2>
                <p class="text-muted">@ViewBag.Message</p>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="bi bi-house"></i> Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
